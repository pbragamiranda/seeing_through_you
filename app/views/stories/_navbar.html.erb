<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between align-items-center"
     style="z-index:1001">

  <% if notice %>
    <div class="flash flash-success alert alert-dismissible fade show" role="alert">
      <%= notice %>
      <button style="padding:8px" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div> 
  <% end %>

  <div>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "Logo.png", style: "width: 250px;height: 200px" %>
    <% end %>
  </div>

  <div>
    <%= link_to '#', class: "navbar-brand", "data-toggle" => "modal", "data-target" => "#exampleModal" do %>
      <%= image_tag "burger.png", style: "width: 323px;height: 267px;margin-right: -80px" %>
    <% end %>
  </div>
</div>

<%= render 'form', story: @story %>
